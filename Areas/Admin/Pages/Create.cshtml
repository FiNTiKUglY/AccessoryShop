}

<h1>Create</h1>

<h4>Accessory</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Accessory.Name" class="control-label"></label>
                <input asp-for="Accessory.Name" class="form-control" />
                <span asp-validation-for="Accessory.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Accessory.Description" class="control-label"></label>
                <input asp-for="Accessory.Description" class="form-control" />
                <span asp-validation-for="Accessory.Description" class="text-danger"></span>
            </div>
